Parse Arg Node
Options Results
Address Value 'AERexxControl'Node

Signal on SYNTAX
Signal on ERROR

/*---------------------------------------------------------------------------*/
/* DOOR Paths                                                                */
/*---------------------------------------------------------------------------*/
AUPath = "DOORS:AUSettings/"
Config = AUPath"AU_Settings.CFG"

/*---------------------------------------------------------------------------*/
/* Initialise Variables                                                      */
/*---------------------------------------------------------------------------*/
Tr=Transmit
GChar=GetChar
PUser=PutUser
PUstr=PutUstr
Sm=SendMessage
GUser=GetUser
Cls="0c"x
CR="0d"x
U="4"x
D="5"x
/*---------------------------------------------------------------------------*/
/* Open Configuration File - READ ONLY                                       */
/*---------------------------------------------------------------------------*/
If Exists(Config) Then Do
 Open(CFG,Config,"R")
  NrOfSets=Strip(Readln(CFG))
  If NrOfSets > 10 Then do; Call S_OVER; End
   If NrOfSets < 11 Then
     Exclude=10-NrOfSets
   Else
     Exclude=1
   Strip(Readln(CFG))
   Do a=1 to NrOfSets
    Setting.a=Strip(Readln(CFG))
   End
   Call SKIPLINE
   Do b=1 to NrOfSets
    Comment.b=Strip(Readln(CFG))
   End
   Call SKIPLINE
   Do c=1 to NrOfSets
    Command.c=Strip(Readln(CFG))
   End;
 Close(CFG)
End
Else Do
  Call IOERROR
End
/*---------------------------------------------------------------------------*/
GUser 144; Date=Result; Pos=1; ForeGr=9; PUser 501
Guser 131; Parm=Result

/*---------------------------------------------------------------------------*/
/* Parameter Check - If Parameter was specified correctly run it!!!          */
/*---------------------------------------------------------------------------*/
Parm=Right(Parm,1); Parm=Upper(Strip(Parm))
IF Parm~='W' Then do; Pos=Parm; Call SELECTION; Call PROG_EXIT; End

PROG_MAIN:
Call BACKGROUND
Call DRAWMENU
Call DRAWBAR

LIGHTSELECT:
 GChar; Cursor=Result
 If Cursor=U Then do; Pos=Pos-1; Call DRAWBAR; End
 If Cursor=D Then do; Pos=Pos+1; Call DRAWBAR; End
 If Upper(Cursor)="Q" Then do; Call PROG_EXIT; End
 If Cursor=CR Then
  Call SELECTION
 Else
  Call LIGHTSELECT
Call PROG_EXIT
/*---------------------------------------------------------------------------*/
DRAWBAR:
 Do n=1 to NrOfSets
  Row_a=n+ForeGr
   If Pos > NrOfSets Then Do; Pos=NrOfSets; End
   If Pos < 1 Then Do; Pos=1; End
    If Pos=n Then do
     If Pos > 1 then do
       c=n-1
       Row_b=c+ForeGr
       Sm "["Row_b";13H[36m"Setting.c" "
     End
     If Pos < NrOfSets then do
       c=n+1
       Row_b=c+ForeGr
       Sm "["Row_b";13H[36m"Setting.c" "
     End
     Sm "["Row_a";13H[44;37m"Setting.n"[0m "
    End
 End
Call LIGHTSELECT
/*---------------------------------------------------------------------------*/
DRAWMENU:
  Do o=1 to NrOfSets
   Row_c=o+ForeGr
    Sm "["Row_c";13H[36m"Setting.o
    Sm "["Row_c";39H[37m"Comment.o
  End
RETURN
/*---------------------------------------------------------------------------*/
SKIPLINE:
   Do x=1 to Exclude
    Strip(Readln(CFG))
   End
   Strip(Readln(CFG))
RETURN
/*---------------------------------------------------------------------------*/
SELECTION:
Do s=1 to NrOfSets
 If Pos=s Then do
   Sm CLS
   PUstr Command.s
    If Command.s="W" Then
     PUser 136
    Else
     PUser 508
 End
End
RETURN

